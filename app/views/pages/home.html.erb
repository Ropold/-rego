<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pixabay.com/photo/2016/09/04/22/45/lego-1645498_960_720.jpg);">
  <div class="container text-center ">
    <h1>REGO</h1>
    <p>Rent your lego sets!</p>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <% @lego_sets.sample(8).each do |lego| %> <!-- .sample(8) wählt 8 zufällige Sets -->
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card mt-3" style="width: 100%;">
          <img src="https://cdn.pixabay.com/photo/2017/07/25/22/54/lego-2539844_960_720.jpg" class="card-img-top" alt="pixa">
          <div class="card-body">
            <h5 class="card-title"><%= lego.set_name %></h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <%= link_to "Go to page", lego_set_path(lego), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
