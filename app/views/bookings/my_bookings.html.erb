<% @bookings.each do |booking| %>
  <div class="container mt-4">
  <div class="card bg-info">
    <div class="card-header">
        <h1 class="card-title"><strong>Booked Set</strong></h1>
    </div>
    <div class="card-body">
        <ul class="list-group">
            <li class="d-flex justify-content-between">
                <strong>Set Name:</strong>
                <span><strong><%= booking.lego_set.set_name %></strong></span>
            </li>
            <li class="d-flex justify-content-between">
                <strong>Lego Number:</strong>
                <span><strong><%= booking.lego_set.lego_nr %></strong></span>
            </li>
            <li class="d-flex justify-content-between">
                <strong>Release Year:</strong>
                <span><strong><%= booking.lego_set.release_year %></strong></span>
            </li>
            <li class="d-flex justify-content-between">
                <strong>Price per Day:</strong>
                <span><strong><%= booking.lego_set.price_per_day %></strong></span>
            </li>
        </ul>
    </div>
    <div class="card-footer text-right">
        <button class="btn btn-dark">Edit</button>
        <button class="btn btn-warning">Delete</button>
    </div>
  </div>
</div>
<% end %>
